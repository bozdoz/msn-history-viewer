{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": ["/node_modules/**", "/build/**"],
  "rules": {
    "react/prop-types": "off",
    "no-console": "error"
  },
  "settings": {
    "react": {
      "version": "17.0.1"
    }
  }
}
